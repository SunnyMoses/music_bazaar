<h1 align="center">Stores</h1>

<table id="customers">
  <thead>
    <tr>
      <th >Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Model</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.category %></td>
        <td><%= store.price %></td>
        <td><%= store.model %></td>
        <td><%= store.description %></td>
        <td style="background-color: #28A745;"><%= link_to 'Show', store %></td>
        <td style="background-color: #3291C9;"><%= link_to 'Edit', edit_store_path(store) %></td>
        <td style="background-color: #7B8997;"><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path ,class: "btn btn-primary btn-block"%>
